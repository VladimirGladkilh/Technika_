                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="component"/>
                </columns>
                <buttonsPanel>
                    <button action="equipmentTable.create"/>
                    <button action="equipmentTable.edit"/>
                    <button action="equipmentTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox-->
        <groupBox id="gridBox" caption="msg://com.company.technika.entity/Technika.equipment">
            <dataGrid id="dataGrid"  width="100%" height="300px" dataContainer="equipmentDc" editorEnabled="true" >
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="component" property="component"  />
                    <column id="prim" property="prim" />
                </columns>
                <buttonsPanel>
                    <button action="dataGrid.create"/>
                    <button action="dataGrid.edit"/>
                    <button action="dataGrid.remove"/>
                </buttonsPanel>
            </dataGrid>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
