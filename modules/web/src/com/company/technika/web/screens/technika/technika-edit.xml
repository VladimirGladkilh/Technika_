        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="technikaDc">
            <column width="250px">
                <textField id="nameField" property="name" />
                <textArea id="primField" property="prim" />
            </column>
        </form>
